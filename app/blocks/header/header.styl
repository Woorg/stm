.header
	position fixed
	z-index 2
	top 0
	left 0
	width 100%

	&__in
		position relative
		padding-top 28px
		padding-bottom 30px
		+r($x)
			padding-top 20px
			padding-bottom 20px
	&__col_right
		position relative

	&__nav
		position absolute
		// top -6px
		top 21px
		right 15px
		text-align right

	&__nav_mob
		top 0
		left 0
		width 100%
		height 100vh
		background #FFF
		text-align center
		// display flex
		// justify-content center
		// align-items center

		.nav__list
			position absolute
			top 50%
			left 50%
			width 100%
			display block
			transform translate(-50%, -50%)

		.nav__link
			display block

		.nav__trigger
			position absolute
			// top 34px
			// top 27px
			top 20px
			right 15px
			+r($x)
				top 20px

		.nav__trigger-icon
			display none

		.nav__trigger-close
			width 26px
			height 26px
			display block

.header_nav-mob
	.header__in
		position static
	.header__logo
		position absolute
		z-index 1
		// top 4px
		left 15px

.logo
	display inline-block
	width 166px
	// width 100%
	img
		max-width 100%
		height auto

