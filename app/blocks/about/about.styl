.slimScrollBar
	right -1px !important
	width 4px !important
	// height 597px !important
	background-color #000000 !important
	opacity 1 !important
	+r($m)
		display none
	&:after
		position absolute
		top 0
		right 0
		content ''
		width 1px
		height 100%
		background #cec000

.slimScrollRail
	top 0
	right 0
	bottom 0
	height 100%
	+r($m)
		display none
	&:after
		position absolute
		z-index 1
		top 0
		right 0
		bottom 0
		content ''
		width 1px
		height 100%
		background #cec000

