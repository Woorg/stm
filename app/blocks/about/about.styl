		// 	bottom 0
		// 	content ''
		// 	width 1px
		// 	height 100%
		// 	background #cec000

	&__title
		margin-top 110px
		margin-bottom 18px

	&__top
		margin-bottom 34px
		border-bottom 1px solid #CEC000
		padding-bottom 8px

	&__text
		padding-right 30px
		+r($m)
			padding-right 0

	&__list
		margin 0
		margin-left 4px
		padding 0
		padding-bottom 34px
		list-style none

	&__item
		margin-top 34px

	&__item-top
		margin-bottom 30px

	&__year-w
		display flex
		max-width 248px
		width 100%

	&__year
		font-size 44px
		font-family $o
		font-weight 700
		line-height 1

	&__year-text
		margin-top -1px
		margin-left 18px
		font-size 14px
		line-height 1.714

	&__image
		margin-bottom 12px
		+r($s)
			height 206px
		img
			max-width 100%
			height auto
			+r($s)
				height 100%
				object-fit cover


