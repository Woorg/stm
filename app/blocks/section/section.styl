.section
	// overflow hidden
	&__in
		position relative
		z-index 1
		min-height 733px
		height 100vh
		

	&__top
		margin-bottom 34px
		border-bottom 1px solid #CEC000
		padding-bottom 14px

	&__num
		position absolute
		bottom 30px
		right 15px

	&__title
		margin-top 110px
		margin-bottom 13px
		+r($m)
			margin-top 93px
		+r($s)
			margin-top 93px
		+r($x)
			margin-top 102px


	&__scrollable
		padding-right 43px
		border-right 1px solid #cec000
		min-height 100%
		+r($m)
			border-right none
			padding-right 0
	&__text
		font-size 14px
		line-height 1.714

.slimScrollDiv
	right -6px
	margin-left -6px
	+r($l)

		padding-right 6px
	+r($m)
		right 0
		margin-left 0
		padding-right 0
.slimScrollBar
	cursor pointer
	+r($m)
		display none !important


.section_first
	position relative
	.section__in
		position relative
		z-index 1
	.section__title,
	.section__text
		margin-left 35px
		max-width 500px
		+r($s)
			margin-left 47px
		+r($x)
			margin-left 0
	.section__title
		margin-top 207px
		margin-bottom 17px
		+r($s)
			margin-top 260px
		+r($x)
			margin-top 185px
			padding-right 12px


	.section__text
		position relative
		margin-left 40px
		padding-right 70px
		padding-left 14px
		font-size 16px
		font-weight 300
		line-height 1.3125
		+r($s)
			margin-left 53px
		+r($x)
			margin-left 0
			padding-right 40px
			padding-left 8px
			font-size 9px
			font-weight 300
			// line-height 1.222
		&:after
			position absolute
			top 6px
			bottom 4px
			left 0
			content ''
			width 3px
			background-color #000000
			+r($x)
				top 0
				bottom 0

	.section__letters
		position absolute
		z-index -1
		top 0
		left 0
		width 100%
		height 100%

	.section__letter
		position absolute

	.section__letter_c
		// top -64px
		// top 450px
		top -65px
		// left -24px
		// left 50px
		// left 165px
		// left 120px
		left -20px
		// +r($l)

		+r($m)
			left -10px
		+r($s)
			top -58px
			left -82px
			max-width 480px
		+r($x)
			top 42px
			left -2px
			max-width 185px


	.section__letter_t
		// left 240px
		// left 330px
		left 256px
