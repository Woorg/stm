		top 250px
		+r($l)
			left 146px

		+r($m)
			left 160px
		+r($s)
			top 230px
			left 100px
			max-width 471px
		+r($x)
			top 196px
			left 70px
			max-width 182px


	.section__letter_m
		top 101px
		// right -86px
		left 614px
