.popup
	position absolute
	z-index 100
	top 80px
	right 9px
	left 0
	visibility hidden
	opacity 0
	padding-top 130px
	padding-right 118px
	padding-bottom 158px
	padding-left 85px
	bottom 0
	background #FFF
	tr(opacity .3s ease)

	+r($s)
		padding-left 60px
		padding-right 60px

	+r($x)
		right 0
		padding-top 40px
		padding-right 15px
		padding-bottom 40px
		padding-left 15px

	&:after
		position absolute
		top 0
		left -100%
		content ''
		width 100%
		bottom 0
		background #FFF
	&__icon
		margin-bottom 30px
	&__title
		margin-bottom 30px
		color #000000
		font-family $rC
		font-size 26px
		font-weight 400
		line-height 1.038
		text-transform uppercase
	&__text
		margin-bottom 25px
		p
			margin-bottom 28px
			&:last-child
				padding-top 17px
				border-top 1px solid #c4c4c4
		strong
			line-height 1.625



	&__close
		resetbutton()
		position absolute
		top 12px
		right 13px


.popup_active
	opacity 1
	visibility visible
	tr(opacity .3s ease)




@keyframes zoomIn
		from
			opacity 0
			transform scale3d(0.3, 0.3, 0.3)

		50%
			opacity 1

.zoomIn
	animation zoomIn .3s ease



@keyframes zoomOut
		from
			opacity 1

		50%
			opacity 0
			transform scale3d(0.3, 0.3, 0.3)

		to
			opacity 0

.zoomOut
	animation zoomOut .3s ease
